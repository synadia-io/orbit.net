<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <NoWarn>$(NoWarn);SA1117;SA1116;SA1503;SA1600;SA1601;SA1602;SA1515</NoWarn>

    <!-- AOT Publishing -->
    <IsAotCompatible>true</IsAotCompatible>
    <PublishAot>true</PublishAot>
    <IsTrimmable>true</IsTrimmable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NATS.Client.Core" />
    <PackageReference Include="Spectre.Console" />
    <PackageReference Include="System.CommandLine" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Synadia.Orbit.NatsCli.Plugin\Synadia.Orbit.NatsCli.Plugin.csproj" />
    <ProjectReference Include="..\..\src\Synadia.Orbit.NatsContext\Synadia.Orbit.NatsContext.csproj" />
  </ItemGroup>

</Project>
